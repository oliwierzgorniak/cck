---
import FoundationsCard from "./FoundationsCard.astro";
import { getCollection } from "astro:content";
const foundationsPosts = await getCollection("foundations");
---

<section class="container" id="foundations">
  <header>
    <h2><span>Our foundations</span></h2>
    <p>
      These foundations create an environment that encourages innovation,
      creativity, and personal growth.
    </p>
  </header>
  <ul>
    <li>
      {
        foundationsPosts.map((post) => (
          <FoundationsCard
            title={post.data.title}
            description={post.data.description}
            slug={post.slug}
          />
        ))
      }
    </li>
  </ul>
</section>

<style>
  h2 {
    white-space: nowrap;
  }

  ul {
    counter-reset: counter;
  }
</style>
